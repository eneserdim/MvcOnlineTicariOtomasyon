@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Kategori Listesi</h2>

<table class="table table-bordered" style="margin-top:35px">
    <tr>
        <th>#</th>
        <th>Kategori  Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.KategoriID
            </td>
            <td>
                @k.KategoriAd
            </td>
            <td><a href="/Kategori/KategoriSil/@k.KategoriID" class="btn btn-danger">Kategoriyi Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@k.KategoriID" class="btn btn-outline-success">Kategoriyi Güncelle</a></td>
        </tr>
    }


</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa })
, new PagedListRenderOptions
{ 
    LiElementClasses = new List<string>
    {"page-link"}
})
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>

