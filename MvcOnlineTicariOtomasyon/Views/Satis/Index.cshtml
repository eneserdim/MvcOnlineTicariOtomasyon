@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Sayfası</h2>
<br />

<table id="tbl1" class="table table-bordered" style="margin-top:35px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.SatisID</td>
            <th>@k.Ürün.UrunAd</th>
            <th>@k.Cariler.CariAd @k.Cariler.CariSoyad</th>
            <th>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</th>
            <th>@k.Adet</th>
            <th>@k.Fiyat</th>
            <th>@k.ToplamTutar</th>
            <th>@k.Tarih</th>

            <td><a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-outline-default" style="background-color:cadetblue">Detaylar</a></td>
        </tr>

    }


</table>
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>

