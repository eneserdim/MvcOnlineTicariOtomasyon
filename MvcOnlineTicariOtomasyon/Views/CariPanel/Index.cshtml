@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>MVC Online Ticari Otomasyon Bilgi Paneli </h2>
<br />

@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td> <label>Mail Adresi: </label>@HttpContext.Current.User.Identity.Name  </td>
        </tr>

        <tr>
            <td><label>Ad: </label> @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" }) </td>
        </tr>
        <tr>
            <td> <label>Soyad: </label> @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td> <label>Şehir: </label> @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td> <label>Şifre: </label> @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</td>
        </tr>
    </table>
    <button class="btn btn-warning">Bilgilerimi Güncelle</button>
}
