@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Personel Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.PersonelID)
        @Html.Label("Personel Adı", new { @class = "h5 { font-weight: bold; }" })
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        <br />
        @Html.Label("Personel Soyadı", new { @class = "h5 { font-weight: bold; }" })
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        <br />
        @Html.Label("Mail Adresi", new { @class = "h5 { font-weight: bold; }" })
        @Html.TextBoxFor(x => x.PersonelMail, new { @class = "form-control" })
        <br />
        @Html.Label("Personel Görseli", new { @class = "h5 { font-weight: bold; }" })
        <input type="file" name="PersonelGorsel" />
        <br />
        @Html.Label("Departmanı", new { @class = "h5 { font-weight: bold; }" })
        @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
        <button class="btn btn-default" style="background-color:darkgreen">Güncelle</button>
    </div>
}